<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_margin="10dp"
              android:padding="10dp"
              android:background="@drawable/bg_image_tree"
              android:layout_height="200dp">
    <TextView
        android:id="@+id/widget_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        tools:text = "3月8日"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/widget_tv_address"
        android:layout_below="@id/widget_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        tools:text = "北京市 海淀区"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/widget_tv_weather_today"
        android:layout_below="@id/widget_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        tools:text = "晴"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/widget_tv_weather_tomorrow"
        android:layout_below="@id/widget_tv_weather_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        tools:text = "小雨"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/widget_tv_lunar"
        android:layout_below="@id/widget_tv_weather_tomorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        tools:text = "北京市 海淀区"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/widget_tv_festival"
        android:layout_below="@id/widget_tv_lunar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        tools:text = "妇女节"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/widget_tv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="刷新"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:padding="10dp"/>

</RelativeLayout>